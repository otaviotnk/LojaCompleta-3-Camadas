@* Se tiver um erro ou mais *@
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div style="padding-top: 15px;"></div>

    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h3 id="msgRetorno" style="padding-top: 20px"><span class="fa fa-exclamation-circle"></span> Opa! Algo deu errado :(</h3>
        <div style="padding-top: 20px" asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
}
@*Se não for nula ou vazia, esta bag aparece na mesma tela do formulário*@
@if (!string.IsNullOrEmpty(ViewBag.Sucesso))
{
    <div style="padding-top: 15px"></div>

    <div id="msg_box" class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h3 id="msgRetorno"><span class="fa fa-check-circle"></span> @ViewBag.Sucesso</h3>
    </div>
}

@* Se tiver sucesso (para usar, tem que marcar na acão da controller, esta mensagem aparece em outra tela sem ser a do formulário ) *@
@if (TempData["Sucesso"] != null)
{
    <div style="padding-top: 15px"></div>

    <div id="msg_box" class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4 id="msgRetorno"><span class="fa fa-check-circle"></span> @Html.Raw(TempData["Sucesso"].ToString())</h4>
    </div>
}

@* Se tiver alteração (para usar, tem que marcar na acão da controller, esta mensagem aparece em outra tela sem ser a do formulário ) *@
@if (TempData["Editado"] != null)
{
    <div style="padding-top: 15px"></div>

    <div id="msg_box" class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4 id="msgRetorno"><span class="fas fa-edit"></span> @Html.Raw(TempData["Editado"].ToString())</h4>
    </div>
}

@* Se tiver Erro (para usar, tem que marcar na acão da controller, esta mensagem aparece em outra tela sem ser a do formulário ) *@
@if (TempData["Erro"] != null)
{
    <div style="padding-top: 15px"></div>

    <div id="msg_box" class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4 id="msgRetorno"><span class="fas fa-exclamation-triangle"></span> @Html.Raw(TempData["Erro"].ToString())</h4>
    </div>
}


