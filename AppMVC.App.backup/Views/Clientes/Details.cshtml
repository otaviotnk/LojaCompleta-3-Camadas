@using AppMVC.App.Extensions
@model AppMVC.App.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Detalhes de " + Model.Nome;
}
<div class="container">
    <br />
    <h1>@ViewData["Title"]</h1>
    <div>
        <h4 class="alert alert-info"><span class="fa fa-info-circle"></span> Informações somente leitura</h4>
        <hr />
        <dl class="row caixa-informacoes">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Documento)
            </dt>
            <dd class="col-sm-10">
                @this.FormataDocumento(1, Model.Documento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Genero)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genero)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
            <dt class="col-sm-2">
                Cadastrado desde
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-dark" supress-by-claim-name="Cliente" supress-by-claim-value="Editar" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </div>

    <partial name="_DetalhesEndereco" />
</div>
