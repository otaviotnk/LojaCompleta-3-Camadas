@model AppMVC.App.ViewModels.VendaViewModel
@{
    ViewData["Title"] = "Excluir Venda";
}
<div class="container">
    <br />
    <h1>@ViewData["Title"]</h1>

    <vc:Summary></vc:Summary>

    <div>
        <h4 class="alert alert-danger"><span class="fa fa-exclamation-triangle"></span> Esta ação será permanente!</h4>
        <hr />

        <dl class="row caixa-informacoes">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StatusVenda)
            </dt>
            <dd class="col-sm-10">
              @Html.DisplayFor(model => model.StatusVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Observacoes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Observacoes)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-info" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>