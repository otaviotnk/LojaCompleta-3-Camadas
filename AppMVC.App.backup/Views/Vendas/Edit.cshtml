@model AppMVC.App.ViewModels.VendaViewModel


@{
    ViewData["Title"] = "Editar Venda";
}
<div class="container">
    <br />
    <h1>@ViewData["Title"]</h1>
    <hr />
    
    <div class="row caixa-informacoes">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden asp-for="Id" />
                <div class="form-group">
                    <label asp-for="TotalVenda" class="control-label"></label>
                    <input disabled asp-for="TotalVenda" class="form-control" />
                    <span asp-validation-for="TotalVenda" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataVenda" class="control-label"></label>
                    <input disabled asp-for="DataVenda" class="form-control" />
                    <span asp-validation-for="DataVenda" class="text-danger"></span>
                </div>
                <hr />                
                <div class="form-group">
                    <label asp-for="StatusVenda" class="control-label"></label>
                    <select asp-for="StatusVenda" class="form-control" asp-items="Html.GetEnumSelectList<AppMVC.Business.Models.StatusVenda>()">
                        <option>Alterar Status...</option>
                    </select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Observacoes" class="control-label"></label>
                    <textarea asp-for="Observacoes" class="form-control"></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a class="btn btn-primary" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
