@model IEnumerable<AppMVC.App.ViewModels.ProdutoViewModel>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @*Espaco reservado para a imagem*@
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayNameFor(model => model.Fornecedor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ativo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="fundo-tabela">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/imagens/@item.Imagem" alt="@item.Imagem" style="width: auto; height: 100px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td supress-by-claim-name="Produto" supress-by-claim-value="">
                        @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                    </td>
                    <td>
                        @item.Valor.ToString("C")
                    </td>
                    <td supress-by-claim-name="Produto" supress-by-claim-value="">
                        @if (item.Quantidade == 0)
                        {
                            <p class="indisponivel">Indisponível</p>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td class="text-right">
                        <a class="btn btn-warning" asp-controller="Produtos" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                        <a supress-by-claim-name="Produto" supress-by-claim-value="" disable-by-claim-name="Produto" disable-by-claim-value="Editar" class="btn btn-info" asp-controller="Produtos" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
                        <a supress-by-claim-name="Produto" supress-by-claim-value="" disable-by-claim-name="Produto" disable-by-claim-value="Excluir" class="btn btn-danger" asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
