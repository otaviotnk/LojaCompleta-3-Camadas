@model AppMVC.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Excluir " + Model.Nome;
}
<div class="container">
    <br />
    <h4>@ViewData["Title"] </h4>
    <h5 class="alert alert-danger"><span class="fa fa-exclamation-circle"></span> Esta ação será permanente!</h5>
    <hr />

    <div class="row caixa-informacoes">
        <div class="col-md-4">
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: auto" />
        </div>
        <div class="col-md-6">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.FornecedorId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Fornecedor.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd>
                    @Model.Valor.ToString("C")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
            </dl>

            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    @* aqui o botão voltar redireciona para a página anterior visitada e não para uma action *@
                    <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>
