@model AppMVC.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhe do Produto - " + Model.Nome;
}
<div class="container">
    <br />
    <h4>@ViewData["Title"]</h4>
    <hr />

    <div class="row caixa-informacoes">
        <div class="col-md-4">
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: auto" />
        </div>
        <div class="col-md-6">
            <dl>
                <dt supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayNameFor(model => model.FornecedorId)
                </dt>
                <dd supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayFor(model => model.Fornecedor.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd>
                    @Model.Valor.ToString("C")
                </dd>
                <dt supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayNameFor(model => model.Quantidade)
                </dt>
                <dd supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>
                <dt supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd supress-by-claim-name="Produto" supress-by-claim-value="">
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
            </dl>

            <div>
                <a supress-by-claim-name="Produto" supress-by-claim-value="Editar" class="btn btn-dark" sp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                @*Volta para a página anterior, não para uma Action*@
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </div>
    </div>
</div>